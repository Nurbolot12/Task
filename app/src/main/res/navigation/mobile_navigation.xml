<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.gr2_lesson_1.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.gr2_lesson_1.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.gr2_lesson_1.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_new_task"
        android:name="com.example.gr2_lesson_1.ui.home.new_task.NewTaskFragment"
        android:label="@string/NewTask"
        tools:layout="@layout/fragment_new_task" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.gr2_lesson_1.ui.home.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.example.gr2_lesson_1.ui.onboard.OnBoardFragment"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board" />
    <fragment
        android:id="@+id/onBoardPageFragment"
        android:name="com.example.gr2_lesson_1.ui.onboard.OnBoardPageFragment"
        android:label="fragment_on_board_page"
        tools:layout="@layout/fragment_on_board_page" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.gr2_lesson_1.MainActivity"
        android:label="MainActivity" />

</navigation>